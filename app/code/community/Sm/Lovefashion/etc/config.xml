<?xml version="1.0"?>
<config>
	<modules>
		<Sm_Lovefashion>
			<version>1.0.0</version>
			<title>MagenTech.com</title>
			<link><![CDATA[http://www.magentech.com/]]></link>
		</Sm_Lovefashion>
	</modules>
	<global>
		<helpers>
		  <lovefashion>
			<class>Sm_Lovefashion_Helper</class>
		  </lovefashion>
		</helpers>
		<models>
		  <lovefashion>
			<class>Sm_Lovefashion_Model</class>
		  </lovefashion>
		</models>		
	</global>
	<adminhtml>
        <translate>
            <modules>
                <Sm_Lovefashion>
                    <files>
                        <default>Sm_Lovefashion.csv</default>
                    </files>
                </Sm_Lovefashion>
            </modules>
        </translate>
	</adminhtml>	
 	<default>
		<lovefashion_cfg module="lovefashion">
			<general>
				<showcpanel>1</showcpanel>
				<showpopup>1</showpopup>
				<layout_styles>1</layout_styles>
				<color>red</color>
				<body_background_color>#ffffff</body_background_color>
				<body_background_image>6</body_background_image>
				<body_link_color>#666666</body_link_color>
				<body_text_color>#666666</body_text_color>
				<header_background_color>#ffffff</header_background_color>
				<header_background_image>6</header_background_image>
				<footer_background_color>#ffffff</footer_background_color>
				<footer_background_image>6</footer_background_image>
				<menu_styles>1</menu_styles>
				<google_font>Roboto Condensed Light</google_font>
				<google_font_targets></google_font_targets>
				<body_font_size>12px</body_font_size>
				<body_font_family>Arial</body_font_family>
				<responsive_menu>collapse</responsive_menu>
			</general>
		</lovefashion_cfg>
	</default> 
</config> 