<script type="text/javascript">
	jQuery('document').ready(function($){
		/* for(var i=1;i<=2;i++){
			$('.dropdow-nav > li:last-child').remove();
		} */
		$i = 0;
		$('ul.dropdow-nav').append('<span class="more-view">See more</span>');
		$('ul.dropdow-nav > li').each(function(){
			$i ++;
			if($i>3){
				$(this).css('display', 'none');
			}
			//$('div.sm_megamenu_wrapper_vertical_menu').css('height', $('ul.dropdow-nav').outerHeight());
		});
		$('ul.dropdow-nav > .more-view').click(function(){
			if($(this).hasClass('open')){
				$i=0;
				$('ul.dropdow-nav > li').each(function(){
					$i ++;
					if($i>3){
						$(this).hide(300);
					}
				});
				$(this).removeClass('open');
				$(this).text('See more');
			}else{
				$i=0;
				$('ul.dropdow-nav > li').each(function(){
					$i ++;
					if($i>3){
						$(this).show(300);
					}
				});
				$(this).addClass('open');
				$(this).text('See less');
			}
		});
		
		
	})
</script>
